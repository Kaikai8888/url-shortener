<div class="container">
  <div class="d-flex flex-column align-items-center justify-content-center" style="height: 95vh; width: 100%;">
    <div class="row mb-5">
      <i class="fas fa-link text-secondary" style="font-size: 100px;"></i>
    </div>
    <div class="row mb-5">
      <h1 class="text-muted">URL Shortener</h1>
    </div>
    <div class="row align-items-center justify-content-center">
      <form class="form-inline" action="/urls" method="POST">
        <input class="form-control mb-2 mr-sm-2 pill" id="original-url" name="originalURL" placeholder="Input URL here"
          pattern="(https?://)?(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\+.~#?&//=]*)">
        <button type="submit" class="btn btn-primary mb-2 pill">Shorten</button>
      </form>
    </div>
    {{#if shortenURL}}
    <div class="row align-items-center mt-3 justify-content-center" id="shorten-url-output">
      <p>Success! Please use this link:</p>
      <div class="w-100"></div>
      <a href="{{shortenURL}}" target="_black" data-toggle="tooltip" data-placement="bottom"
        title="Copy & Open in new tab" style="cursor: pointer;">
        <input type="text" id="shorten-url" value="{{ shortenURL }}" disabled class="pill text-white"
          style="cursor: pointer; padding: 6px 12px; text-decoration:underline;"></a>
      <button id="copy-btn" data-toggle="tooltip" data-placement="bottom" title="Copy"
        class="btn btn-danger btn-sm rounded-circle" style="margin-bottom: -25px; margin-left: -15px;">
        <i class=" fas fa-copy font-weight-light"></i>
      </button>
    </div>
    {{/if}}
  </div>



</div>